# Neo4j Aura Configuration
# Copy your connection details from the Python section in Developer Hub
# Replace the values below with your actual credentials
NEO4J_URI=neo4j+s://YOUR_INSTANCE_ID.databases.neo4j.io
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_password_here

# Provider Configuration (openai or gemini)
PROVIDER=openai

# OpenAI Configuration
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_CHAT_MODEL=gpt-4-turbo-preview

# Gemini Configuration
# Get your API key from https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_EMBEDDING_MODEL=gemini-embedding-001
GEMINI_CHAT_MODEL=gemini-2.5-flash

# Embedding Model Configuration (optional - overrides provider defaults)
# EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# Similarity Threshold (optional - default shown)
# Higher = more strict matching (0.0 to 1.0)
SIMILARITY_THRESHOLD=0.85

# API Configuration (optional - defaults shown)
API_HOST=0.0.0.0
API_PORT=8000

# CORS: comma-separated origins allowed to call this API (required for browser requests when using credentials)
# Default includes localhost and Netlify frontends — add more when you deploy
# CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://fancy-begonia-749ca6.netlify.app,https://shimmering-torrone-d527c0.netlify.app

